generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id                 String           @id @default(cuid())
  email              String           @unique
  firstName          String?
  lastName           String?
  status             ContactStatus    @default(SUBSCRIBED)
  subscribedAt       DateTime         @default(now())
  unsubscribedAt     DateTime?
  customFields       Json?            @default("{}")
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  validatedAt        DateTime?
  validationMetadata Json?            @default("{}")
  validationScore    Float?
  validationStatus   ValidationStatus @default(NOT_VALIDATED)
  tags               ContactTag[]
  events             EmailEvent[]
  emailSends         EmailSend[]

  @@index([email])
  @@index([status])
  @@index([validationStatus])
}

model Tag {
  id        String        @id @default(cuid())
  name      String        @unique
  color     String        @default("#3b82f6")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  campaigns CampaignTag[]
  contacts  ContactTag[]
}

model ContactTag {
  id        String   @id @default(cuid())
  contactId String
  tagId     String
  createdAt DateTime @default(now())
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([contactId, tagId])
  @@index([contactId])
  @@index([tagId])
}

model Campaign {
  id          String         @id @default(cuid())
  name        String
  subject     String
  designJson  Json?
  htmlContent String?
  status      CampaignStatus @default(DRAFT)
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  tags        CampaignTag[]
  emailSends  EmailSend[]

  @@index([status])
  @@index([scheduledAt])
}

model CampaignTag {
  id         String   @id @default(cuid())
  campaignId String
  tagId      String
  createdAt  DateTime @default(now())
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([campaignId, tagId])
  @@index([campaignId])
  @@index([tagId])
}

model EmailSend {
  id         String          @id @default(cuid())
  campaignId String
  contactId  String
  messageId  String?
  status     EmailSendStatus @default(PENDING)
  sentAt     DateTime?
  openedAt   DateTime?
  clickedAt  DateTime?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  events     EmailEvent[]
  campaign   Campaign        @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contact    Contact         @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([contactId])
  @@index([status])
  @@index([messageId])
}

model EmailEvent {
  id        String    @id @default(cuid())
  sendId    String
  contactId String
  type      EventType
  url       String?
  metadata  Json?     @default("{}")
  timestamp DateTime  @default(now())
  contact   Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  send      EmailSend @relation(fields: [sendId], references: [id], onDelete: Cascade)

  @@index([sendId])
  @@index([contactId])
  @@index([type])
  @@index([timestamp])
}

enum ContactStatus {
  SUBSCRIBED
  UNSUBSCRIBED
  BOUNCED
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  CANCELLED
}

enum EmailSendStatus {
  PENDING
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  FAILED
}

enum EventType {
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  UNSUBSCRIBED
}

enum ValidationStatus {
  VALID
  INVALID
  CATCH_ALL
  UNKNOWN
  NOT_VALIDATED
}
