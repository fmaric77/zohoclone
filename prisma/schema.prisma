// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id             String        @id @default(cuid())
  email          String        @unique
  firstName      String?
  lastName       String?
  status         ContactStatus @default(SUBSCRIBED)
  subscribedAt   DateTime      @default(now())
  unsubscribedAt DateTime?
  customFields   Json?         @default("{}")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  tags       ContactTag[]
  emailSends EmailSend[]
  events     EmailEvent[]

  @@index([email])
  @@index([status])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#3b82f6")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts  ContactTag[]
  campaigns CampaignTag[]
}

model ContactTag {
  id        String   @id @default(cuid())
  contactId String
  tagId     String
  createdAt DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([contactId, tagId])
  @@index([contactId])
  @@index([tagId])
}

model Campaign {
  id          String          @id @default(cuid())
  name        String
  subject     String
  designJson  Json?           // Unlayer design JSON
  htmlContent String?         // Rendered HTML
  status      CampaignStatus  @default(DRAFT)
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  tags      CampaignTag[]
  emailSends EmailSend[]

  @@index([status])
  @@index([scheduledAt])
}

model CampaignTag {
  id         String   @id @default(cuid())
  campaignId String
  tagId      String
  createdAt  DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([campaignId, tagId])
  @@index([campaignId])
  @@index([tagId])
}

model EmailSend {
  id         String         @id @default(cuid())
  campaignId String
  contactId  String
  messageId  String?        // SES message ID
  status     EmailSendStatus @default(PENDING)
  sentAt     DateTime?
  openedAt   DateTime?
  clickedAt  DateTime?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  campaign Contact  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contact  Campaign @relation(fields: [contactId], references: [id], onDelete: Cascade)
  events   EmailEvent[]

  @@index([campaignId])
  @@index([contactId])
  @@index([status])
  @@index([messageId])
}

model EmailEvent {
  id        String   @id @default(cuid())
  sendId    String
  contactId String
  type      EventType
  url       String?  // For click events
  metadata  Json?    @default("{}")
  timestamp DateTime @default(now())

  send    EmailSend @relation(fields: [sendId], references: [id], onDelete: Cascade)
  contact Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([sendId])
  @@index([contactId])
  @@index([type])
  @@index([timestamp])
}

enum ContactStatus {
  SUBSCRIBED
  UNSUBSCRIBED
  BOUNCED
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  CANCELLED
}

enum EmailSendStatus {
  PENDING
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  FAILED
}

enum EventType {
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  UNSUBSCRIBED
}

